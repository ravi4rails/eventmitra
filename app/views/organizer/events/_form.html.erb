<%= form_for ([:organizer, @event]) do |f| %>
  
  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>

  <div class="form-group">
    <%= f.label :event_title %>
    <%= f.text_field :title, class: "form-control site-form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_venue %>
    <%= f.text_field :venue, class: "form-control site-form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_city %>
    <%= f.text_field :city, class: "form-control site-form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_state %>
    <%= f.text_field :state, class: "form-control site-form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_country %>
    <%= f.text_field :country, class: "form-control site-form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_postal_code %>
    <%= f.text_field :postal_code, class: "form-control site-form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :event_description %>
    <%= f.text_area :description, data: { provider: :summernote } %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Event", class: "btn btn-success rounded-0" %>
  </div>

<% end %>
