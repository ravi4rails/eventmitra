<div class="container">
  <div class="row mt-5">
    <div class="col-md-10 mx-md-auto">
      <div class="text-center">
        <p class="site-color font-20 w-sp-6">LET'S CREATE YOUR <strong>FREE</strong> ACCOUNT !</p>
        <p class="site-color">It won't take more than a few minutes, we promise :)</p>
      </div>
      <div class="row">
        <div class="col-md-5">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group mb-4 mt-4">
              <%= f.email_field :email, autocomplete: "email", placeholder: "Email", class: "form-control site-form-control" %>
            </div>

            <div class="form-group mb-4 mt-4">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control site-form-control" %>
            </div>

            <div class="form-group mb-4 mt-4">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password", class: "form-control site-form-control" %>
            </div>

            <div class="form-group text-center">
              <%= f.submit "Sign up", class: "pl-5 pr-5 btn btn-site" %>
              <p class="mt-3">Already on Townscript? <span class="site-color"><%= link_to "Sign In", new_user_session_path %></span></p>
            </div>
          <% end %>
        </div>
        <div class="col-md-2">
          <h3 class="site-color font-weight-bold mt-5 text-center">OR</h3>
        </div>
        <div class="col-md-5">
          <div class="auth-btns">
            <div class="form-group mt-4 mb-4">
              <%= link_to "Sign up with Google", "javascript:void(0)", class: "btn btn-block btn-outline-site" %>
            </div>
            <div class="form-group mt-4 mb-4">
              <%= link_to "Sign up with Facebook", "javascript:void(0)", class: "btn btn-block btn-outline-site" %>
            </div>
            <p class="text-center">By continuing, you agree to Townscript's <%= link_to "terms of service", "javascript:void(0)", class: "site-color font-weight-bold" %> and <%= link_to "privacy policy", "javascript:void(0)", class: "site-color font-weight-bold" %>.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


